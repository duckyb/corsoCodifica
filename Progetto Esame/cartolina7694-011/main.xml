                        <!--saluto iniziale-->
                        <salute>
                            <s>
                                <lb xml:id="lineText-1-011" facs="#lineText_1_011" />A voi miei cari
                                <lb xml:id="lineText-2-011" facs="#lineText_2_011" />Eroi!
                            </s>
                            <s> Il mio
                                <lb xml:id="lineText-3-011" facs="#lineText_3_011" />bacio e il
                                <lb xml:id="lineText-4-011" facs="#lineText_4_011" />mio saluto
                            </s>
                        </salute>
                    </opener>
                    <!--contenuto del messaggio-->
                    <p> 
                        <s xml:id="lineText-5-011" facs="#lineText_5_011">Evviva la Vittoria!</s>
                        <s xml:id="lineText-6-011" facs="#lineText_6_011">Evviva l'<country ref="lIT">Italia</country>!</s>
                    </p>
                    <!--saluto finale e firma-->
                    <p xml:id="line-vertical-011" facs="#line_vertical_011">
                            <!-- Testo ruotato 90° -->
                            <s type="hand_w" style="writing-mode: vertical-rl; text-orientation: sideways">Mi raccomando quella sola <unclear reason="illegible" agent="ink" cert="medium">XO</unclear></s>
                            <s type="stamp_w" style="writing-mode: vertical-lr; text-orientation: sideways"> 
