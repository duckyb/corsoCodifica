<TEI xmlns="http://www.tei-c.org/ns/1.0">
    <teiHeader>
        <fileDesc xml:lang="it">
            <titleStmt>
                <title>Il mio primo dizionario</title>
                <author>Duccio Breschi</author>
            </titleStmt>
            <publicationStmt>
                <p>informazioni sulla pubblicazione</p>
            </publicationStmt>
            <sourceDesc>
                <p>informazioni sulla sorgente</p>
            </sourceDesc>
        </fileDesc>
    </teiHeader>
    <text>
        <body>
            <!-- L E S S I C O G R A F O  -->
            <entry n="1"> <!-- prima entrata del dizionario-->
                <form type="lemma"> <!--tipo dell'entrata-->
                    <orth>lessicografo</orth> <!--ortografia-->
                    <pron notation="ipa">lessi'kografo</pron> <!--pronuncia-->
                    <syll>les|si|cò|gra|fo</syll> <!--sillabazione-->
                </form>
                <gramGrp> <!-- inserisco le informazioni grammaticali-->
                    <pos>s</pos>
                    <numer>sing</numer> <!-- persona -->
                    <gen>m.</gen> <!-- genere -->
                </gramGrp>
                <etym> dal <lang>greco</lang> <!--inserisco le informazioni etimologiche-->
                    <mentioned>λεξικογράϕος</mentioned>, composto di 
                    <mentioned> λεξικόν </mentioned> ossia
                    <gloss>"lessico"</gloss> e
                    <mentioned>γράϕος </mentioned>  ovvero
                    <gloss>"-grafo"</gloss>
                </etym>
                <sense n="s1">
                    <usg type="dom">(linguistica)</usg>
                    <def>chi si occupa di lessicografia</def>
                    <cit type="example">
                        <quote>Francesco Sabatini è un linguista, lessicografo e presidente onorario dell'Accademia della Crusca</quote>
                    </cit>
                </sense>
                <sense n="s2">
                    <def>colui che contribuisce alla  compilazione di un dizionario</def>
                    <cit type="example">
                        <quote>Tullio de Mauro è stato un lessicografo</quote>
                    </cit>
                    <xr type="syn"> <!--in questo caso collega questo senso con i sinonimi di questo senso-->
                        <ref>dizionarista</ref>
                    </xr>
                    <xr type="syn">
                        <ref>vocabolarista</ref>
                    </xr>
                </sense>
                <re type="derived"> <!--inserisco le parole derivate-->
                    <form> 
                        <orth>lessicografia</orth>
                    </form>
                </re>
            </entry>

            <!-- F R E G A R E -->
            <entry n="2"> <!-- seconda entrata del dizionario-->
                <form type="lemma"> <!--tipo dell'entrata-->
                    <orth>fregare</orth> <!--ortografia-->
                    <pron notation="ipa">fre'gare</pron> <!--pronuncia-->
                    <syll>fre|gà|re</syll> <!--sillabazione-->
                </form>

                <gramGrp> <!-- inserisco le informazioni grammaticali-->
                    <pos>v</pos> <!--specifico che è un verbo-->
                    <subc>tr.</subc> <!--specifico che è transitivo-->
                </gramGrp>

                <etym> dal <lang>latino</lang> <!--inserisco le informazioni etimologiche-->
                    <mentioned>frĭcare</mentioned>
                </etym>

                <!--codifica dei 5 sensi dell'entrata-->
                <sense n="s1">
                    <def>fare dei freghi</def>
                    <cit type="example">
                        <quote>Avendo preso male le misure, fregò la portiera dell'automobile contro la colonna dell'ingresso del garage</quote>
                    </cit>
                </sense>
                <sense n="s2">
                    <usg type="dom">(popolare)</usg>
                    <def>tirare un bidone</def>
                    <cit type="example">
                        <quote>Ti ha fregato!</quote>
                        <quote>Il baro lo fregò di brutto calando un poker d'assi alla fine dell'ultima mano</quote>
                    </cit>
                </sense>
                <sense n="s3">
                    <def>rubare</def>
                    <cit type="example">
                        <quote>Mi sono distratta un attimo e mi hanno fregato la borsa da sotto il naso! </quote>
                    </cit>
                </sense>
                <sense n="s4">
                    <def>interessare, importare</def>
                    <cit type="example">
                        <quote>Non me ne frega niente</quote>
                    </cit>
                </sense>
                <sense n="s5">
                    <usg type="dom">(per estensione)</usg>
                    <def>imbrogliare o ingannare, quindi in modo ipocrita</def>
                    <cit type="example">
                        <quote>Oh, tu non mi freghi!</quote>
                    </cit>
                </sense>
                <re type="derived"> <!--inserisco le parole derivate-->
                    <form> 
                        <orth>fregarsi</orth>
                    </form>
                    <form>
                        <orth>fregatura</orth>
                    </form>
                    <form>
                        <orth>sfregare</orth>
                    </form>
                </re>
            </entry>

            <!-- D I Z I O N A R I S T A -->
            <entry n="3"> <!-- terza entrata del dizionario-->
                <form type="lemma"> <!--tipo dell'entrata-->
                    <orth>dizionarista</orth> <!--ortografia-->
                    <pron notation="ipa">dittsjonaˈrista</pron> <!--pronuncia-->
                    <syll>di|zio|na|rì|sta</syll> <!--sillabazione-->
                </form>
                <gramGrp> <!-- inserisco le informazioni grammaticali-->
                    <pos>s</pos>
                    <numer>sing</numer> <!-- persona -->
                    <gen>m e f</gen> <!-- genere -->
                </gramGrp>
                <sense n="s1">
                    <usg type="dom">(professione)(letteratura)</usg>
                    <def>chi redige un <ref>dizionario<ref></def>
                    <etym> da
                        <gloss>dizionario</gloss>, ed
                        <gloss> -ista </gloss>
                    </etym>
                    <xr type="syn"> <!--in questo caso collega questo senso con i sinonimi di questo senso-->
                        <ref>lessicografo</ref>
                    </xr>
                    <xr type="syn">
                        <ref>vocabolarista</ref>
                    </xr>
                </sense>
            </entry>

            <!-- V O C A B O L A R I S T A  -->
            <entry n="4"> <!-- quarta entrata del dizionario-->
                <form type="lemma"> <!--tipo dell'entrata-->
                    <orth>vocabolarista</orth> <!--ortografia-->
                    <pron notation="ipa">vokabolaˈrista</pron> <!--pronuncia-->
                    <syll>vo|ca|bo|la|rì|sta</syll> <!--sillabazione-->
                </form>
                <gramGrp> <!-- inserisco le informazioni grammaticali-->
                    <pos>s</pos>
                    <numer>sing</numer> <!-- persona -->
                    <gen>m e f</gen> <!-- genere -->
                </gramGrp>
                <sense n="s1">
                    <def>chi compone un vocabolario</def>
                    <etym> da
                        <gloss>vocabolario</gloss>
                    </etym>
                    <xr type="syn"> <!--in questo caso collega questo senso con i sinonimi di questo senso-->
                        <ref>lessicografo</ref>
                    </xr>
                </sense>
            </entry>

        </body> 
    </text>
</TEI>